        android:supportsRtl="true"
        android:theme="@style/Redhead">
        <activity android:name=".general.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".general.HomePageActivity" />
        <activity android:name=".general.MainMenuActivity" />
        <activity android:name=".general.AppointmentsActivity" />
        <activity android:name=".general.AppointmentInfoActivity" />
        <activity android:name=".general.CasesManagementActivity" />
        <activity android:name=".general.MedicTestsActivity" />
        <activity android:name=".general.MedicationManagementActivity" />
        <activity android:name=".general.FeedbackActivity"></activity>
    </application>

</manifest>